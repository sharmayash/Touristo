<% include includes/header %>

<main>
  <div class="row">
    <div class="col s12 m6 l6 center">
      <form
        action="/addTransport"
        method="post"
        class="card-panel blue-grey lighten-5 center z-depth-5"
      >
        <h5>Add Transport</h5>
        <div class="row" style="margin-top: 15%; margin-bottom: 22.5%">
          <div class="input-field col s12">
            <i class="material-icons prefix">directions_car</i>
            <input id="transport-type" type="text" name="transport" />
            <label for="transport-type">Transport Type Name</label>
          </div>
          <label>For Example: Car, Bus, Bike, etc .</label>
        </div>
        <button
          class="btn blue-grey darken-4 waves-effect waves-light"
          type="submit"
          name="action"
        >
          Add
        </button>
      </form>
      <div style="padding: 10%">
        <button class="btn blue-grey darken-4 waves-effect waves-light">
          View All Transport
        </button>
      </div>
    </div>
    <div class="col s12 m6 l6 center">
      <form
        action="/addVehicle"
        method="post"
        class="card-panel blue-grey lighten-5 center z-depth-5"
      >
        <h5>Add Vehicle Details</h5>
        <div class="row">
          <div class="input-field col s12">
            <select name="vehicleType">
              <option value="" disabled selected>Select Vehicle Type</option>
              <% if(locals.vehicleType) { %>
                <% vehicleType.map(vehicle => { %>
                  <option value="<%= vehicle.transportName %>">
                    <%= vehicle.transportName %>
                  </option>
                <% }) %>
              <% } %>
            </select>
          </div>
          <div class="input-field col s12">
            <i class="material-icons prefix">directions_car</i>
            <input id="vehicle-name" type="text" name="vehicleName" />
            <label for="vehicle-name">Vehicle Name</label>
          </div>
          <div class="input-field col s12">
            <i class="material-icons prefix">directions_car</i>
            <input id="vehicle-number" type="text" name="vehicleNumber" />
            <label for="vehicle-number">Vehicle Number</label>
          </div>
        </div>
        <button
          class="btn blue-grey darken-4 waves-effect waves-light"
          type="submit"
          name="action"
        >
          Add
        </button>
      </form>
      <div style="padding: 10%">
        <button class="btn blue-grey darken-4 waves-effect waves-light">
          View All Vehicle
        </button>
      </div>
    </div>
  </div>
</main>

<% include includes/footer %>
