<% include includes/header %>

<main>
  <div class="row">
    <div class="col s12">
      <div class="card-panel blue-grey lighten-5 z-depth-2">
        <h5>Total Duty Slip</h5>
        <ul class="collapsible">
          <% if (locals.bookings) { %> <% bookings.map(booking => { %>
          <li>
            <div class="collapsible-header">
              <div class="col s4"><%= booking.customerName %></div>
              <div class="col s4"><%= booking.customerNo %></div>
              <div class="col s1 right-align">
                <i class="material-icons">info_outline</i>
              </div>
            </div>
            <div class="collapsible-body">
              <div class="row">
                <div class="col s12 m4 l4">
                  <span><b> Travelling to: </b> <%= booking.details %></span>
                </div>
                <div class="col s12 m4 l4">
                  <span><b>Reporting Address: </b> <%= booking.address %></span>
                </div>
                <div class="col s12 m4 l4">
                  <span><b>Driver Details: </b> <%= booking.driverName %></span>
                </div>
              </div>
              <div class="row">
                <div class="col s12 m4 l4">
                  <span
                    ><b>Bookie Details : </b> <%= booking.bookie %> - <%=
                    booking.bookiePhNo %></span
                  >
                </div>
                <div class="col s12 m4 l4">
                  <span
                    ><b>Vehicle Details : </b> <%= booking.vehicleName %></span
                  >
                </div>
                <div class="col s12 m4 l4">
                  <span><b>Rate: </b> <%= booking.rate %></span>
                </div>
              </div>
              <div class="row">
                <div class="col s12 m4 l4">
                  <span
                    ><b>Initial Reading : </b> <%= booking.meterReading1 %>
                    kms</span
                  >
                </div>
                <div class="col s12 m4 l4">
                  <span
                    ><b>Final Reading : </b> <%= booking.meterReading2 %>
                    kms</span
                  >
                </div>
                <div class="col s12 m4 l4">
                  <span
                    ><b>Total kms travelled: </b> <%= booking.totalReading %>
                    kms</span
                  >
                </div>
              </div>
              <div class="row">
                <div class="col s12 m6 l6">
                  <span>
                    <b>Departure Details :- </b> <br />
                    <b>Date :- </b><%= booking.departureDate %>
                    <b> Time :- </b><%= booking.departureTime %>
                  </span>
                </div>
                <div class="col s12 m6 l6">
                  <span>
                    <b>Arrival Details :- </b> <br />
                    <b>Date :- </b><%= booking.arrivalDate %>
                    <b> Time :- </b><%= booking.arrivalTime %>
                  </span>
                </div>
              </div>
              <div class="row">
                <div class="col s12 m4 l4">
                  <span>
                    <b>Package : </b> Rs. <%= booking.totalAmount %>
                  </span>
                </div>
                <div class="col s12 m4 l4">
                  <span> <b>Advance : </b> Rs. <%= booking.advance %> </span>
                </div>
                <div class="col s12 m4 l4">
                  <span>
                    <b>Balance Amount left : </b> Rs. <%= booking.balance %>
                  </span>
                </div>
              </div>
              <div class="row center">
                <div class="col s3">
                  <button class="btn blue-grey">bill</button>
                </div>
                <div class="col s3">
                  <button class="btn blue">
                    <i class="material-icons">edit</i>
                  </button>
                </div>
                <div class="col s3">
                  <button class="btn">
                    <i class="material-icons">print</i>
                  </button>
                </div>
                <div class="col s3">
                  <button class="btn red">
                    <i class="material-icons">delete</i>
                  </button>
                </div>
              </div>
            </div>
          </li>
          <% }) %> <% } %>
        </ul>
      </div>
    </div>
  </div>
</main>

<% include includes/footer %>
