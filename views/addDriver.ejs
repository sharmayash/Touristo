<% include includes/header %>

<main>
  <div class="row">
    <div class="col s12">
      <form
        action="/addDriver"
        method="post"
        class="card-panel blue-grey lighten-5 center z-depth-5"
      >
        <div class="row">
          <div class="col s7 right-align">
            <h5>Add Driver</h5>
          </div>
          <div class="col s5 right-align">
            <a
              href="#modal1"
              class="btn btn-small modal-trigger blue-grey darken-4 waves-effect waves-light z-depth-5"
            >
              View All Drivers
            </a>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12 m6 l6">
            <i class="material-icons prefix">person</i>
            <input id="driver-name" type="text" name="driverName" />
            <label for="driver-name">Driver Name</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <i class="material-icons prefix">phone</i>
            <input id="phone" name="phone" type="number" class="validate" />
            <label for="phone">Contact Number</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <i class="material-icons prefix">email</i>
            <input id="email" type="email" name="email" />
            <label for="email">E-mail Id</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <i class="material-icons prefix">vpn_key</i>
            <input id="licence-no" type="text" name="licenceNo" />
            <label for="licence-no">Licence Number</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <i class="material-icons prefix">date_range</i>
            <input id="dob" name="dob" type="text" class="datepicker" />
            <label for="dob">Date of Birth</label>
          </div>
        </div>
        <button
          class="btn blue-grey darken-4 waves-effect waves-light"
          type="submit"
          name="action"
        >
          Submit
          <i class="material-icons right">send</i>
        </button>
      </form>
    </div>
  </div>
</main>

<div id="modal1" class="modal modal-fixed-footer">
  <div class="modal-content">
    <h4>Drivers :-</h4>
    <% if (locals.drivers) { %> <% drivers.map(driver => { %>
    <ul class="collection">
      <li class="collection-item">
        <div>
          <%= driver.name %>
          <a href="#!" class="secondary-content red-text"
            ><i class="material-icons">delete</i></a
          >
        </div>
      </li>
    </ul>
    <% }) %> <%} %>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
  </div>
</div>

<% include includes/footer %>
