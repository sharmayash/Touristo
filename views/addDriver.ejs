<% include includes/header %>

<main>
  <div class="row">
    <div class="col s12">
      <form
        action="/addDriver"
        method="post"
        class="card-panel blue-grey lighten-5 center z-depth-5"
      >
        <h5>Add Driver</h5>
        <div class="row">
          <div class="input-field col s12 m6 l6">
            <i class="material-icons prefix">person</i>
            <input id="driver-name" type="text" name="driverName" />
            <label for="driver-name">Driver Name</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <i class="material-icons prefix">phone</i>
            <input id="phone" name="phone" type="number" class="validate" />
            <label for="phone">Contact Number</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <i class="material-icons prefix">email</i>
            <input id="email" type="email" name="email" />
            <label for="email">E-mail Id</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <i class="material-icons prefix">vpn_key</i>
            <input id="licence-no" type="text" name="licenceNo" />
            <label for="licence-no">Licence Number</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <i class="material-icons prefix">date_range</i>
            <input id="dob" name="dob" type="text" class="datepicker" />
            <label for="dob">Date of Birth</label>
          </div>
        </div>
        <button
          class="btn blue-grey darken-4 waves-effect waves-light"
          type="submit"
          name="action"
        >
          Submit
          <i class="material-icons right">send</i>
        </button>
      </form>
    </div>
  </div>
</main>

<% include includes/footer %>
