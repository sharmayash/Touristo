<% include includes/header %>

<main>
  <div class="row">
    <div class="col s12 center">
      <form
        action="/addCompany"
        method="post"
        enctype="multipart/form-data"
        class="card-panel blue-grey lighten-5 center z-depth-5"
      >
        <div class="row">
          <div class="col s7 right-align">
            <h5>Add Company</h5>
          </div>
          <div class="col s5 right-align">
            <a
              data-target="modal1"
              class="btn btn-small blue-grey darken-4 waves-effect waves-light modal-trigger z-depth-5"
            >
              View All Companies
            </a>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12 m6 l6">
            <i class="material-icons prefix">business</i>
            <input id="company-name" type="text" name="companyName" />
            <label for="company-name">Company Name</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <i class="material-icons prefix">person_circle</i>
            <input id="founder-name" type="text" name="founderName" />
            <label for="founder-name">Founder Name</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <i class="material-icons prefix">email</i>
            <input id="email" type="email" name="email" />
            <label for="email">E-mail</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <i class="material-icons prefix">phone</i>
            <input id="phone" type="number" name="phone" />
            <label for="phone">Phone</label>
          </div>
          <div class="input-field col s12 m6 l6">
            <i class="material-icons prefix">vpn_key</i>
            <input id="gst" type="text" name="gst" />
            <label for="gst">GSTIN</label>
          </div>
          <div class="file-field input-field col s12 m6 l6">
            <div class="btn blue-grey darken-4">
              <span>Choose Your Logo</span>
              <input type="file" name="logo" />
            </div>
            <div class="file-path-wrapper">
              <i class="material-icons prefix">image</i>
              <input class="file-path validate" type="text" />
            </div>
          </div>
        </div>
        <button
          class="btn blue-grey darken-4 waves-effect waves-light"
          type="submit"
          name="action"
        >
          Submit
          <i class="material-icons right">send</i>
        </button>
      </form>
    </div>
  </div>
</main>

<div id="modal1" class="modal modal-fixed-footer">
  <div class="modal-content">
    <h4>Companies :-</h4>
    <% if (locals.companies) { %> <% companies.map(company => { %>
    <ul class="collection">
      <li class="collection-item avatar">
        <img
          src="../<%= company.logo %>"
          class="responsive-img circle"
          alt="abc"
        />
        <span class="title"><%= company.name %></span>
        <a href="#!" class="secondary-content"
          ><i class="material-icons">grade</i></a
        >
      </li>
    </ul>
    <% }) %> <%} %>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
  </div>
</div>

<% include includes/footer %>
